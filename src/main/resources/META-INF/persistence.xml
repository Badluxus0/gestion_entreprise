<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
  <persistence-unit name="gestion-entreprisePU">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <jta-data-source>java:/GestionEntreprise</jta-data-source>
    <class>com.esmt.gestionentreprise.entities.Employee</class>
    <class>com.esmt.gestionentreprise.entities.Department</class>
    <class>com.esmt.gestionentreprise.entities.Project</class>
    <class>com.esmt.gestionentreprise.entities.Task</class>
    <class>com.esmt.gestionentreprise.entities.User</class>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update" />
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
    </properties>
  </persistence-unit>
</persistence>